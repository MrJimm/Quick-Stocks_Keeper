    " -- defines a factorial function\n",
    "    function fact (n)\n",
    "      if n == 0 then\n",
    "        return 1\n",
    "      else\n",
    "        return n * fact(n-1)\n",
    "      end\n",
    "    end\n",
    "    \n",
    "    print(\"enter a number:\")\n",
    "    a = io.read(\"*number\")        -- read a number\n",
    "    print(fact(a))"
   ]
  }
